{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm-run-all -l --parallel build:remix build:temporal",
    "build:remix": "remix build",
    "build:temporal": "tsc --build ./temporal/tsconfig.json",
    "dev": "npm-run-all -l build:temporal --parallel dev:temporal dev:remix start:worker",
    "dev:remix": "remix dev",
    "dev:temporal": "tsc --build --watch ./temporal/tsconfig.json",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "start:worker": "node ./temporal/lib/worker"
  },
  "dependencies": {
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3",
    "temporalio": "^0.17.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@tsconfig/node16": "^1.0.2",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
